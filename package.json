{
  "name": "tinythreadsbyzirwa-accounts",
  "version": "1.0.0",
  "description": "TinyThreadsByZirwa Accounts - Order Management System",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "watch": "webpack serve --config webpack.config.js",
    "build": "webpack --config webpack.config.js",
    "dev": "concurrently \"npm run watch\" \"wait-on http://localhost:3000 && npm run start\"",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder --win --publish never",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "business",
    "accounting",
    "management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.0.12",
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/postcss": "^4.1.8",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.18",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.10.0",
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.6.0",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.1",
    "postcss-loader": "^8.1.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "util": "^0.12.5",
    "wait-on": "^7.2.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.1"
  },
  "build": {
    "appId": "com.tinythreadsbyzirwa.accounts",
    "productName": "TinyThreadsByZirwa Accounts",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icons/appIcon.ico",
      "signingHashAlgorithms": null,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TinyThreadsByZirwa Accounts"
    }
  }
}
